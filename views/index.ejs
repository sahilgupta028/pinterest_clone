<% include ./partials/header.ejs %>

<div class="w-full h-full bg-cover bg-center bg-zinc-900 bg-no-repeat flex items-center justify-center">
  <div class="w-[75%] md:w-[25%] bg-white px-4 md:px-10 lg:px-20 py-8 md:py-10 lg:py-12 rounded-md md:rounded-[20px] flex flex-col items-center">
    <div class="w-6 md:w-8 h-6 md:h-8 bg-zinc-200 rounded-full overflow-hidden flex mt-2 mb-5">
      <img class="w-full h-full object-cover" src="https://i.pinimg.com/280x280_RS/f6/e9/3a/f6e93a06b500b2d87ffd32e1f56f7c6f.jpg" alt="">
    </div>
    <h1 class="text-2xl md:text-3xl mb-5 text-center font-semibold text-zinc-700 capitalize tracking-tighter leading-none">Welcome to Pinterest</h1>
    <% if (error.length > 0) { %>
      <p class="font-semibold text-xs text-red-600"><%= error[0] %></p>
    <% } %>
    <form action="/login" method="post" class="w-full max-w-md">
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="Username">
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="Password">
      <a href="/" class="mt-2 font-semibold text-zinc-500 inline-block">Forgot Password?</a>
      <input class="border-2 rounded-full block mt-2 w-full px-3 py-2 bg-red-600 text-white" type="submit" value="Login">
    </form>
    <p class="text-xs font-semibold text-zinc-700 mt-7 w-11/12 md:w-3/4 lg:w-3/5 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service and acknowledge that you've read our Privacy Policy.</p>
    <a href="/register" class="border-2 rounded-full mt-7 font-semibold px-3 py-2 text-sm text-white w-full inline-block bg-red-600 text-center">Don't have an account? Register now</a>
  </div>
</div>

<% include ./partials/footer.ejs %>
