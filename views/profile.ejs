<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-900 text-white pt-20">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profdets flex flex-col items-center">
        <div class="relative">
            <span id="uploadicon" class="w-10 h-10 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
                <i class="text-zinc-800 ri-pencil-line"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
            </div>
        </div>
        <h1 class="text-3xl font-semibold mt-5"><%= user.name %></h1>
        <h3 class="text-md">@<%= user.username %></h3>
        <a href="/add" class="px-4 md:px-10 py-2 mt-5 rounded-full bg-red-600 text-md">Add New Post</a>
    </div>
    <div class="cards flex flex-wrap gap-4 md:gap-10 px-4 md:px-10 mt-10 items-center justify-center">
        <div class="card">
            <div class="w-44 md:w-64 h-32 md:h-52 rounded-lg overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="">
            </div>
            <a href="/show/posts" class="inline-block font-semibold text-md md:text-xl mt-3 flex justify-center">Your Uploaded Pins</a>
            <h5 class="text-sm font-medium opacity-60 flex justify-center">Pin <%= user.posts.length %></h5>
        </div>
    </div>
</div>
<script>
    document.querySelector("#uploadicon").addEventListener("click", function () {
        document.querySelector("#uploadform input").click();
    });

    document.querySelector("#uploadform input").addEventListener("change", function () {
        document.querySelector("#uploadform").submit();
    });
</script>
<% include ./partials/footer.ejs %>
