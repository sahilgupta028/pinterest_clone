<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-900 px-4 md:px-10 py-5 text-white h-full bg-cover bg-no-repeat">
    <h1 class="text-2xl md:text-3xl lg:text-4xl">Create a new Post.</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" class="flex flex-col items-center mt-5" method="post" enctype="multipart/form-data">
        <input class="text-white block w-full md:w-1/2 lg:w-1/3 px-3 py-2 border-2 mt-5 rounded-md" type="file" name="postimage">
        <input class="text-black block w-full md:w-1/2 lg:w-1/3 px-3 py-2 border-2 mt-2 rounded-md" type="text" placeholder="Title" name="title">
        <textarea class="text-black block h-32 md:h-40 lg:h-48 w-full md:w-1/2 lg:w-1/3 px-3 py-2 border-2 mt-2 rounded-md" type="text" placeholder="Description" name="description"></textarea>
        <input class="transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 hover:bg-red-700 duration-300 block w-full md:w-1/2 lg:w-1/3 px-3 py-2 mt-2 rounded-full bg-red-700 text-white" type="submit" value="Add my Post">
    </form>
</div>
<% include ./partials/footer.ejs %>
